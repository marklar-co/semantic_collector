{
    "manifest_version": 3,
    "name": "Semantic Collector",
    "short_name": "SemCollect",
    "description": "Crawl and collect web page content. Download results in JSON format.",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "semantic_amp_logo.png",
            "48": "semantic_amp_logo.png",
            "128": "semantic_amp_logo.png"
        }
    },
    "icons": {
        "16": "semantic_amp_logo.png",
        "48": "semantic_amp_logo.png",
        "128": "semantic_amp_logo.png"
    }
}
